{
    /* Visual */

    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,

    "window.autoDetectColorScheme": true,
    "window.autoDetectHighContrast": false,
    "window.nativeTabs": true,
    "window.titleBarStyle": "native",

    "workbench.editor.untitled.hint": "hidden",

    "workbench.iconTheme": "vscode-icons",

    // Make source editor look like Xcode
    "editor.fontFamily" :"SFMono Nerd Font, SFMono, Menlo, Monaco, Courier New, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineHeight": 18,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80],
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "workbench.colorTheme": "Xcode Default (Light)",
    "workbench.editor.tabCloseButton": "left",
    "workbench.preferredLightColorTheme": "Xcode Default (Light)",
    "workbench.preferredDarkColorTheme": "Xcode Default (Dark)",

    // Make terminal look like iTerm2
    "terminal.integrated.altClickMovesCursor": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fontFamily": "SFMono Nerd Font, SFMono, Menlo, Monaco, Courier New, monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.enableBell": true,
    "workbench.colorCustomizations": {
        "terminal.background":"#ffffff",
        "terminal.foreground":"#000000",
        "terminalCursor.background":"#ffffff",
        "terminalCursor.foreground":"#000000",
        "terminal.ansiBlack":"#000000",
        "terminal.ansiBlue":"#0225c7",
        "terminal.ansiBrightBlack":"#676767",
        "terminal.ansiBrightBlue":"#6871ff",
        "terminal.ansiBrightCyan":"#5ffdff",
        "terminal.ansiBrightGreen":"#5ff967",
        "terminal.ansiBrightMagenta":"#ff76ff",
        "terminal.ansiBrightRed":"#ff6d67",
        "terminal.ansiBrightWhite":"#ffffff",
        "terminal.ansiBrightYellow":"#fefb67",
        "terminal.ansiCyan":"#00c5c7",
        "terminal.ansiGreen":"#00c200",
        "terminal.ansiMagenta":"#c930c7",
        "terminal.ansiRed":"#c91b00",
        "terminal.ansiWhite":"#c7c7c7",
        "terminal.ansiYellow":"#c7c400"
    },

    /* Editing */

    "editor.suggest.preview": true,
    "editor.suggestSelection": "first",

    "explorer.confirmDragAndDrop": false,

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "files.maxMemoryForLargeFilesMB": 8192,

    "security.workspace.trust.untrustedFiles": "open",

    "workbench.startupEditor": "none",

    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/vscode-nvim",

    /* Language specific settings */

    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[feature]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[swift]": {
        "files.trimTrailingWhitespace": false
    },

    "bazel.enableCodeLens": true,
    "bazel.executable": "bz",
    "bazel.queriesShareServer": true,
    "bsv.bazelrc.run.executable": "bz",

    "go.toolsManagement.autoUpdate": true,

    "js/ts.implicitProjectConfig.checkJs": true,

    "markdown.extension.toc.githubCompatibility": true,
    "markdown.extension.toc.levels": "2..6",
    "markdown.extension.toc.updateOnSave": false,
    "markdown.extension.italic.indicator": "_",

    "python.defaultInterpreterPath": "/usr/bin/python3",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.showStartPage": false,
    "python.pythonPath": "/usr/bin/python3",

    "shellcheck.customArgs": [
        "-x"
    ],

    "typescript.updateImportsOnFileMove.enabled": "always",

    /* Spellcheck */

    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "feature",
        "go",
        "handlebars",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "cSpell.userWords": [
        "barcode",
        "Bazel",
        "Bazelcon",
        "Brentley",
        "lldb",
        "merkle",
        "mnenomic",
        "rpath",
        "Starlark",
        "Starlarkification",
        "Toolchains"
    ],

    /* Other */
    "projectManager.git.baseFolders": [
        "~/"
    ],
    "projectManager.git.maxDepthRecursion": 2,
}
